<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Drunkr</servlet-name>
		<servlet-class>drunkr.DrunkrServlet</servlet-class>
		<url-pattern>/drunkr</url-pattern>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>drunkr.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Signup</servlet-name>
		<servlet-class>drunkr.Signup</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>drunkr.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateDrink</servlet-name>
		<servlet-class>drunkr.CreateDrink</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>QueryDrink</servlet-name>
		<servlet-class>drunkr.QueryDrink</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>RateDrink</servlet-name>
		<servlet-class>drunkr.RateDrink</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateDrink</servlet-name>
		<url-pattern>/createDrink</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QueryDrink</servlet-name>
		<url-pattern>/getDrink</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RateDrink</servlet-name>
		<url-pattern>/rateDrink</url-pattern>
	</servlet-mapping>	
  	<filter>
    	<filter-name>Auth</filter-name>
    	<filter-class>drunkr.Auth</filter-class>
  	</filter>
  	  <filter>
    	<filter-name>NoCache</filter-name>
    	<filter-class>drunkr.NoCache</filter-class>
  	</filter>
  	<filter-mapping>
    	<filter-name>NoCache</filter-name>
    	<url-pattern>/app/*</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>Auth</filter-name>
    	<url-pattern>/app/*</url-pattern>
  	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
